<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/backgroud"
    android:layout_margin="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="LỌC"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/backgroud1"/>
    <ScrollView
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoảng giá (1 đêm) : "
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/giaMin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0đ"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" - "
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/giaMax"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5,000,000đ+"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <com.innovattic.rangeseekbar.RangeSeekBar
                android:layout_marginTop="10dp"
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient4"
                app:rsb_trackSelectedColor="@color/white"
                app:rsb_trackThickness="3dp"
                />
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xếp hạng :"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>
            <CheckBox
                android:buttonTint="@color/blue"
                android:id="@+id/btn_2sao"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="≤2 sao"
                android:padding="15dp"/>
            <CheckBox
                android:buttonTint="@color/blue"
                android:id="@+id/btn_3sao"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 sao"
                android:padding="15dp"/>
            <CheckBox
                android:buttonTint="@color/blue"
                android:id="@+id/btn_4sao"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 sao"
                android:padding="15dp"/>
            <CheckBox
                android:buttonTint="@color/blue"
                android:id="@+id/btn_5sao"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 sao"
                android:padding="15dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loại khách sạn :"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <CheckBox
                android:buttonTint="@color/blue"
                android:id="@+id/btn_hotel"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:padding="15dp"/>
            <CheckBox
                android:buttonTint="@color/blue"
                android:id="@+id/btn_vila"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vila"
                android:padding="15dp"/>
            <CheckBox
                android:buttonTint="@color/blue"
                android:id="@+id/btn_apatment"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apartment"
                android:padding="15dp"/>
            <CheckBox
                android:buttonTint="@color/blue"
                android:id="@+id/btn_resort"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resort"
                android:padding="15dp"
                />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_huy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnFiler"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroud2"
            app:backgroundTint="@null"
            android:text="hủy"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <Button
            android:layout_margin="10dp"
            android:id="@+id/btn_loc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnFiler"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradient2"
            app:backgroundTint="@null"
            android:text="lọc"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>