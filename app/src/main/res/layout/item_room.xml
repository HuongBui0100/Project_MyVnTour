<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="15dp"
        android:background="@color/black"
        android:layout_height="150dp">
<!--        <ImageView-->
<!--            android:id="@+id/img_phong"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:src="@drawable/anh2"-->
<!--            android:scaleType="centerCrop"/>-->
        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/img_phong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#FFFEFE"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="2"
            app:sliderStartAutoCycle="true"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_tenPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deluxe"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nguoi"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_soNguoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 người lớn"
                android:textColor="#302F2F"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/li_treEm">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_trenho"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/tv_soTre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 trẻ em"
                android:textColor="#302F2F"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bed"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_giuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 giường"
                android:textColor="#302F2F"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dt"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/tv_dienTich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 m²"
                android:textColor="#302F2F"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_gia"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1.000.000 VNĐ/ đêm"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#3D7BF6"/>
        <Button
            android:layout_marginRight="15dp"
            android:id="@+id/btn_dat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="chọn"
            android:backgroundTint="@color/blue"/>
    </LinearLayout>

</LinearLayout>