<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#D3CECE"
    android:layout_height="match_parent"
    tools:context=".ActivityMaintain.HoanTatDatActivity">
<include layout="@layout/tool_bar4"/>
    <LinearLayout
        android:id="@+id/contenTop"
        android:padding="20dp"
        android:layout_below="@+id/tool_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTanKhachSan"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Thanh Toán"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh Toán Sau Khi Được Nhân Viên Xác Nhận"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contenMId"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_below="@+id/contenTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvHOtenTenDat"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Description"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh Toán Sau Khi Được Nhân Viên Xác Nhận"/>
        <TextView
            android:id="@+id/tvSoDienThoai"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh Toán Sau Khi Được Nhân Viên Xác Nhận"/>
        <TextView
            android:id="@+id/tvTenPHong"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Description"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
         <LinearLayout
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <TextView
                 android:layout_marginTop="10dp"
                 android:textColor="@color/black"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Nhận Phòng"/>
             <TextView
                 android:id="@+id/tvNgayDat"
                 android:layout_marginTop="10dp"
                 android:textColor="@color/black"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Nhận Phòng"/>
         </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trả Phòng"/>
                <TextView
                    android:id="@+id/tvNgayTra"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhận Phòng"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tvSoLuongPhogn"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhận Phòng"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tvSoKhachToiTa"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận Phòng"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvGiaCuoiCung"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Description"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã bao gồm cả thuế và phí"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contenBot"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:maxLines="8"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="Đặt phòng của bạn là dặt phòng với MyVnTour được sử lí bời công ti đối tác của chúng tôi . khi hoàn tất đặt phòng này bạn đồng ý với điều kiện đặt phòng , diều khoản chung và chính sách bảo mật .Vai trò của MyVnTour chỉ đơn thuần là nhà cung cấp nền tảng kết nối giữa khách hàng và công ty du lịch có liên quan.Bạn sẽ không dduocj nhận hỗ trọ từ bộ phần dịch vụ khách hàng của MyVnTour cho đặt phòng này"
        android:layout_below="@+id/contenMId"/>

    <RelativeLayout
        android:paddingTop="10dp"
        android:background="@drawable/gradientbackground2"
        android:paddingBottom="28dp"
        android:id="@+id/contenBot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng Tiền"
                android:textSize="12dp"
                android:textColor="@color/xam"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/GiaMoPhong"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 2.500.000.000 / Year"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/btnRentNow"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:textAllCaps="false"
            android:text="Đặt Ngay"
            android:layout_alignParentRight="true"
            app:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient4"/>
    </RelativeLayout>
</RelativeLayout>