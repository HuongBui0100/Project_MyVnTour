<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMaintain.NearbyActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityMaintain.MapsActivity" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tool_bar2"/>
    <ScrollView
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cvBoLoc"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:animateLayoutChanges="true"
                    android:id="@+id/layout_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:paddingLeft="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_location_on_24"/>
                        <TextView
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore this area"
                            android:padding="10dp"
                            android:textColor="@color/blue"/>


                    </LinearLayout>
                    <View
                        android:id="@+id/dongke"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/blue"/>
                    <GridLayout
                        android:id="@+id/mGridLayout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbHouse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etPassword"
                            android:buttonTint="@color/blue"
                            android:text="House"
                            android:textColor="@color/black" />
                        <CheckBox
                            android:id="@+id/cbApartments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etPassword"
                            android:buttonTint="@color/blue"
                            android:text="Apartments"
                            android:textColor="@color/black" />
                        <CheckBox
                            android:id="@+id/cbHotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etPassword"
                            android:buttonTint="@color/blue"
                            android:text="Hotel"
                            android:textColor="@color/black" />
                        <CheckBox
                            android:id="@+id/cbVilla"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etPassword"
                            android:buttonTint="@color/blue"
                            android:text="Villa"
                            android:textColor="@color/black" />

                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:scrollbars="none|horizontal"
                android:id="@+id/recyclerview"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

</FrameLayout>